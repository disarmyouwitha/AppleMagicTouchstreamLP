<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <LangVersion>latest</LangVersion>
    <EnableSharedPortReferences>true</EnableSharedPortReferences>
  </PropertyGroup>
  <ItemGroup Condition="'$(EnableSharedPortReferences)' == 'true'">
    <ProjectReference Include="..\GlassToKey.Core\GlassToKey.Core.csproj" />
    <ProjectReference Include="..\GlassToKey.Platform.Linux\GlassToKey.Platform.Linux.csproj" />
  </ItemGroup>
  <ItemGroup>
    <None Include="..\GlassToKey\GLASSTOKEY_DEFAULT_KEYMAP.json" Link="GLASSTOKEY_DEFAULT_KEYMAP.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>
</Project>
